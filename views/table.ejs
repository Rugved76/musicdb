<style>
    *{
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        letter-spacing: 1px;
        text-transform: capitalize;
    }
    th,
    td {
        padding: 15px;
        color: black;
        background-color: aliceblue;
        border: none;
    }
    tr:hover{
        background-color: crimson;
        transition: 0.3s;
        color: blue;
    }
    body{
        background-color: rgb(237, 54, 185);
    }
    button {
        background-color: transparent;
        border: none;
        float: right;
        color: red;
    }

    button:hover {
        /* border: 1px solid black; */
        box-shadow: 2px 2px 0px red;
        transition: 0.3s;
        border-radius: 2px;
    }
    h1{
        font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        color: white;       
        text-shadow: 3px 3px 3px rgb(165, 0, 110);
        text-align: center;
    }
    .container{
        justify-content: center;
        display: flex;
        /* flex-direction: column?; */
        margin: auto;
    }
    a{
        display: flex;
        justify-content: center;
        margin: 1em;
        text-decoration: none;
        color: white;
    }
    a:hover{
        color: black;
        transition: 0.3s ease-out;
    }
    tr:hover {
        background-color: black;
    }
</style>


<hr>

<% if(music!=null) { %>
    <h1><strong id="title">MUSIC LIST</strong></h1>
    <hr>
    <div class="container">
        <table border="1px">
            <tr>        
                <th>Name</th>               
                <th>Singer </th>
                <th>Delete</th>
            </tr>
            <% music.forEach(function(item){ %>
                <tr>
                    <td>
                        <%= item.Songname%>
                    </td>   
                    <td>
                        <%= item.singer %>
                    </td>
                    <td>
                        <form class="del" method="post" action="/deleteSongs/<%= item._id %>">
                            <button type="submit"><strong>X</strong></button>
                        </form>
                    </td>

                    </td>
                </tr>
                <% }) %>
        </table>
    </div>
    <a href="/">Back</a>        
    <% } %>